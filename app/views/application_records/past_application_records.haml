%table
  %tr
    %th Date Submitted
    %th Name
    %th Interview
    %th Staff Note
  - @records.each do |record| 
    %tr
      %td
        = format_date_time record.created_at
      %td 
        = link_to(record.user.full_name, application_record_path(record.id))
      %td
        - if record.interview == nil
          not scheduled
        - elsif record.interview.completed
          Completed
          = format_date_time record.interview.scheduled
        - else
          = format_date_time record.interview.scheduled
      %td
        = record.staff_note
